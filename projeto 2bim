#include <stdio.h>

int main() {
    int opcao;
    int numero, resultado, resto;
    int i, digito, base;
    int fator, pot, temp;
    char hex;

    do {
        printf("\n=== CONVERSOR DE BASES ===\n");
        printf("1. Decimal para Binário\n");
        printf("2. Decimal para Hexadecimal\n");
        printf("3. Decimal para Octal\n");
        printf("4. Octal para Decimal\n");
        printf("5. Binário de 8 dígitos para Decimal\n");
        printf("6. Binário de 8 dígitos para Hexadecimal\n");
        printf("7. Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);

        if (opcao >= 1 && opcao <= 6) {
            printf("Digite o número a ser convertido: ");
            scanf("%d", &numero);
        }

        if (opcao == 1) {
            // Decimal para Binário
            resultado = 0;
            fator = 1;
            while (numero > 0) {
                resto = numero % 2;
                resultado += resto * fator;
                fator *= 10;
                numero /= 2;
            }
            printf("Resultado em binário: %d\n", resultado);

        } else if (opcao == 2) {
            // Decimal para Hexadecimal
            printf("Resultado em hexadecimal: ");
            temp = numero;
            do {
                resto = temp % 16;
                if (resto < 10)
                    hex = '0' + resto;
                else
                    hex = 'A' + (resto - 10);
                printf("%c", hex); // OBS: imprime invertido
                temp /= 16;
            } while (temp > 0);
            printf(" (invertido)\n");

        } else if (opcao == 3) {
            // Decimal para Octal
            resultado = 0;
            fator = 1;
            while (numero > 0) {
                resto = numero % 8;
                resultado += resto * fator;
                fator *= 10;
                numero /= 8;
            }
            printf("Resultado em octal: %d\n", resultado);

        } else if (opcao == 4) {
            // Octal para Decimal
            resultado = 0;
            fator = 1;
            temp = numero;
            while (temp > 0) {
                digito = temp % 10;
                resultado += digito * fator;
                fator *= 8;
                temp /= 10;
            }
            printf("Resultado em decimal: %d\n", resultado);

        } else if (opcao == 5) {
            // Binário de 8 dígitos para Decimal
            resultado = 0;
            fator = 1;
            temp = numero;
            while (temp > 0) {
                digito = temp % 10;
                resultado += digito * fator;
                fator *= 2;
                temp /= 10;
            }
            printf("Resultado em decimal: %d\n", resultado);

        } else if (opcao == 6) {
            // Binário de 8 dígitos para Hexadecimal
            // Primeiro converte para decimal
            resultado = 0;
            fator = 1;
            temp = numero;
            while (temp > 0) {
                digito = temp % 10;
                resultado += digito * fator;
                fator *= 2;
                temp /= 10;
            }

            // Depois, imprime hexadecimal (invertido)
            printf("Resultado em hexadecimal: ");
            temp = resultado;
            do {
                resto = temp % 16;
                if (resto < 10)
                    hex = '0' + resto;
                else
                    hex = 'A' + (resto - 10);
                printf("%c", hex); // OBS: imprime invertido
                temp /= 16;
            } while (temp > 0);
            printf(" (invertido)\n");

        } else if (opcao == 7) {
            printf("Encerrando o programa...\n");
        } else {
            printf("Opção inválida!\n");
        }

    } while (opcao != 7);

    return 0;
}
